{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
        "env": [
          "NEXT_PUBLIC_API_URL",
          "NEXT_PUBLIC_FEATURED_CATEGORY",
          "NEXT_PUBLIC_LATEST_CATEGORY",
          "NEXT_PUBLIC_TRENDING_CATEGORY",
          "NEXT_PUBLIC_POPULAR_CATEGORY",
          "NEXT_PUBLIC_CATEGORY_ONE",
          "NEXT_PUBLIC_CATEGORY_TWO",
          "NEXT_PUBLIC_CATEGORY_THREE"
        ]
    },
    "vars": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
			"cache": false
		}
  }
}
